  #Function: This is the sign up page-->
<h1 style="font-size:50px;color:#787878;position:absolute;top:500px"><strong>Sign up</strong></h1>
<!--#Author: mohamed lotfy 
  #team : 1
  #paramters: none-->
<style type="text/css">
body{
  overflow: hidden;
  position: relative;
  top:-500px;
}
  .field {
font-size:20px;
color:#505050;
  }
  .width{
    width:50%;
    position: relative;
    left:0px;
    top:550px;
  }
  .right {
    position: relative;
    left:650px;
    top:-300px;
  }
}
</style>
<div class="width">
<body>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   
   <div class="form-group">
<%= f.text_field :email, autofocus: true,:placeholder => "Email", class: "form-control input-lg" %>
</div>
<div class="form-group">
<%= f.password_field :password, autofocus: true,:placeholder => "Password", class: "form-control input-lg" %></div>
<div class="form-group">
<%= f.password_field :password_confirmation, autofocus: true,:placeholder => "Confirm Password", class: "form-control input-lg" %>
</div>
      <div class="form-group">
<%= f.text_field :first_name, autofocus: true,:placeholder => "First Name", class: "form-control input-lg" %>
</div>
      <div class="form-group">
<%= f.text_field :last_name, autofocus: true,:placeholder => "Last Name", class: "form-control input-lg" %>
</div>
 <div class="right" > 
  <%= devise_error_messages! %>
    <div class="field" > <strong>
      <%= f.label :gender %><br />
      <%= f.label :gender, "Male", :value => "Male"  %>
      <%= f.radio_button :gender, true , :checked => true %>
      <%= f.label :gender, "Female", :value => "Female" %>
      <%= f.radio_button :gender, false%>
    </strong>
    </div>
   <div class="form-group">
<%= f.text_field :birth_date, autofocus: true,:placeholder => "Birth Date", class: "form-control input-lg" %>
</div>
   <div class="form-group">
<%= f.text_field :phone_num, autofocus: true,:placeholder => "Phone Number", class: "form-control input-lg" %>
</div>
    <div class="form-group">
     <button class="btn btn-primary btn-lg btn-block" style="width:25%;position:relative;left:215px"> Sign Up
     <% f.submit "Sign up" %>
     </button>
       <%= render "devise/shared/links" %>
     </div>
     </div>
  <% end %>

</body>

</div>