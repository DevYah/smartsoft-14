<div class="page-header">
  <h1>Listing shipments</h1>
</div>
<br>
<br>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th colspan="1">Shipment ID</th>
      <th colspan="1">Cut off time</th>
      <th colspan="1">Created at</th>
      <th colspan="1"></th>
      <th colspan="1"></th>
      <th colspan="1"></th>  
    </tr>
  </thead>
  <tbody>
    <% unless @shipments.empty? %>
      <% @shipments.each do |shipment| %>
        <tr>
          <td><%= shipment.id %></td>
          <td><%= shipment.cut_off_time %></td>
          <td><%= shipment.created_at %></td> 
          <td>
             <%= link_to(shipment, class: "btn btn-small") do %>
                Show <i class="icon-show icon-white"></i>
             <% end %>
          </td>
          <td>
            <%= link_to(edit_shipment_path(shipment), class: "btn btn-small") do %>
              Edit <i class="icon-edit icon-white"></i>
            <% end %>
          </td>
          <td>
            <%= link_to(shipment, class: "btn btn-small" , method: :delete, data: { confirm: 'Are you sure?' }) do %>
              Delete <i class="icon-delete icon-white"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="0">No shipments are created yet</td>
      </tr>
    <% end %>
  </tbody>   
</table>
