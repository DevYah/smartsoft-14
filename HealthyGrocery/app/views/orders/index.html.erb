<h1>Listing orders</h1>



<!--Creating a text label to take the order number that the method should search for and passing this parameter to the controller-->
<%= form_tag orders_path, :method => 'get' do %>
<p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<h3>u have choosen <%= $district%></h3>

<table>
  <tr>
    <th>Orderno</th>
    <th>Price</th>
    <th>Weight</th>
    <th>Volume</th>
    <th>Status</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.orderNo %></td>
    <td><%= order.price %></td>
    <td><%= order.weight %></td>
    <td><%= order.volume %></td>
    <td><%= order.status %></td>
    <td><%= order.date %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

