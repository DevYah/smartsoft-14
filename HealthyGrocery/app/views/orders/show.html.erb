<table class="table">
  <caption><h1 style='font-family:Courier'>Order</h1></caption>
  <thead>
    <tr>
      <th>attribute</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><b>Orderno:</b></td>
      <td><%= @order.orderNo %></td>
    </tr>
    <tr>
      <td><b>Price:</b></td>
      <td><%= @order.price %></td>
    </tr>
     <tr>
      <td><b>Weight:</b></td>
      <td><%= @order.weight %></td>
    </tr>
    <tr>
      <td><b>Volume:</b></td>
      <td><%= @order.volume%></td>
    </tr>
     <tr>
      <td><b>Status:</b></td>
      <td><%= @order.status%></td>
    </tr>
     <tr>
      <td><b>Date:</b></td>
      <td><%= @order.date%></td>
    </tr>
     <tr>
      <td><b>Coordinates:</b></td>
      <td><%= @order.coordinates%></td>
    </tr>
     <tr>
      <td><b>Owner:</b></td>
      <td><%= @order.member%></td>
    </tr>
     <tr>
      <td><b>Route:</b></td>
      <td><%= @order.route%></td>
    </tr>
     <tr>
      <td><b>Finished:</b></td>
      <td><%= @order.isfinished%></td>
    </tr>
     <tr>
      <td><b>Delivered:</b></td>
      <td><%= @order.delivered%></td>
    </tr>
    <tr>
      <td><b>Date:</b></td>
      <td><%= @order.date %></td>
    </tr>
     <tr>
      <!--  Author: Mahmoud Walid
            Team: 3
            Function: showing a button if there is no address chosen-->
      <td><b>Shipping address:</b></td>
      <td>
        <% if @order.address[@order.address.length-2]%>
            <%= @order.address[@order.address.length-2].name %> 
            <%= link_to 'show', @order.address[@order.address.length-2] %>
        <% else %>
          <%if @order.coordinates%>
            some coordinates are used for this order , however , the address crossponding to these coordinates is deleted from you address book
          <%else%> 
            no address is choosen yet
            <%= link_to 'Choose now', chooseOrder_path(@order) %>
          <%end%>
        <%end%>
      </td>
    </tr>
    <tr>
      <td><b>Billing address:</b></td>
      <td>
        <% if @order.address.last%>
          <%= @order.address.last.name %> 
          <%= link_to 'show', @order.address.last %>
        <% else %>
          <%if @order.coordinates%>
            some coordinates are used for this order , however , the address crossponding to these coordinates is deleted from you address book
          <%else%>
            no address is choosen yet
            <%= link_to 'Choose now', chooseOrder_path(@order) %>
          <%end%>
        <%end%>
      </td>
    </tr>
  </tbody>
</table>




