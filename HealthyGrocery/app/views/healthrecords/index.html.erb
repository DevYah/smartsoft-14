<h1>Listing healthrecords</h1>
<%#Here to show the table of the values of the healthrecords%>
<table>
  <tr>
    <th>Name</th>
    <th>Bmi</th>
    <th>Fats</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Program</th>
    <th>Bloodtype</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @healthrecords.each do |healthrecord| %>
  <tr>
    <td><%= healthrecord.name %></td>
    <td><%= healthrecord.bmi %></td>
    <td><%= healthrecord.fats %></td>
    <td><%= healthrecord.height %></td>
    <td><%= healthrecord.weight %></td>
    <td><%= healthrecord.program %></td>
    <td><%= healthrecord.bloodtype %></td>
    <td><%= link_to 'Show', healthrecord %></td>
    <td><%= link_to 'Edit', edit_healthrecord_path(healthrecord) %></td>
    <td><%= link_to 'Destroy', healthrecord, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

