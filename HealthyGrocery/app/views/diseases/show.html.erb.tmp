<p id="notice"><%= notice %></p>
<table class="table table-bordered table-responsive" width="625">
  <tr>
    <th colspan="7 ">Name:</th>
    <td><%= @disease.name %></td>
  </tr>
  <tr>
    <th colspan="7">Information:</th>
    <td><%= @disease.information %></td>
  </tr>
  <tr>
    <th colspan="7">Recommended:</th>
    <td>
      <% @disease.recommended_items.each do |f| %>
        <%= f.name %>
      </br>
    <% end %>
  </td>
</tr>
<tr>
  <th colspan="7">Restricted:</th>
  <td>
    <% @disease.restricted_items.each do |c| %>
      <%= c.name %>
    </br>
  <% end %>
</td>
