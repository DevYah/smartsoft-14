<div class="page-header">
  <h1>Diseases</h1>
  <div class="contextual">
    <%= link_to(new_disease_path, class: "btn btn-success") do %>
      New Disease <i class="icon-plus icon-white"></i>
    <% end %>
  </div>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th></th>
      <th colspan="1">Name</th>
      <th colspan="1">Information</th>
      <th colspan="1">Recommended</th>
      <th colspan="1">Restricted</th>
      <th colspan="1">Actions</th>
    </tr>
  </thead>
  <tbody
    <% unless @diseases.empty? %>
      <% @diseases.each do |disease| %>
        <tr>
        <td></td>
        <td><%= link_to disease.name, disease %></td>
        <td><%= disease.information %></td>
        <td>
          <% disease.recommended_items.each do |f| %>
            <%= f.name %>
            </br>
          <% end %>
        </td>
        <td>
          <% disease.restricted_items.each do |c| %>
            <%= c.name %>
            </br>
          <% end %>
        </td>
        <td> 
          <%= link_to(edit_disease_path(disease), class: "btn btn-small") do %>
            Edit <i class="icon-edit icon-white"></i>
          <% end %>
          <%= link_to 'Destroy', disease, method: :delete, data: { confirm: 'Are you sure?' } %> 
        </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
      <td colspan="0">No diseases is declared yet</td>
      </tr>
    <% end %>
  </tbody>                                        
</table>

