 <%-# makes the form asking the retailer for attributes about the item -%>
  <%= form_for @item, :url => items_path, :html => { :multipart => true } do |f| %>  
<% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%-# label and file_field for uploading an image-%>
 <%-f.label :image -%> 
<%= f.file_field :image%>
    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <%-# radio button for status-%>
  <div class="field">
  <p> Status : </p>
  <%= f.radio_button :status, true, :checked => true %> 
  <%= label :status, 'True' %>
  <%= f.radio_button :status, false, :checked => false %>
  <%= label :status, 'False' %>
</div>
<%-# radio button for paused-%>
  <div class="field">
  <p> Paused : </p>
  <%= f.radio_button :paused, true, :checked => true %> 
  <%= label :status, 'True' %>
  <%= f.radio_button :paused, false, :checked => false %>
  <%= label :paused, 'False' %>
</div>
 <div class="field">
    <%= f.label :stock %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
