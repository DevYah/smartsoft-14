    <td>Name: <%= item.name %></td> </br>
    <td>Price: <%= item.price %></td></br>
    <td>Category: <%= item.category %></td></br>
    <td>Stock: <%= item.amount %></td></br>
    <td>Available: <%= item.status %></td><br/>
    <td>Description: <%= item.description %></td></br>
    <td>Rating: <%= item.rating %></td></br>
