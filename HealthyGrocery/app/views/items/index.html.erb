    <td><%= form_tag(makediscount_path) do %>
    <p>
    <%= hidden_field_tag(:discount_item_id, @discount_item_id ) %>
    <%= text_field_tag (:discount_amount)%>
    <%= submit_tag "Make Discount"%>
    </p>
    <% end %>
    </td>
    <td><%= link_to 'Remove Discount', removediscount_path(item) %></td>
    
    


