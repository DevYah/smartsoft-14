<h1>Listing trucks</h1>
<table>
  <div class="panel panel-default">
    <table class="table table-nonfluid">
  <thead>
    <tr>
      <th>Driver</th>
      <th>Capacity</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |t| %>
      <tr>
        <td><%= t.driver.name %></td>
        <td><%= t.capacity %></td>
        <td><%= t.status %></td>
        <td> <h5> <%= link_to 'Show', t %> </h5> </td>
        <td> <h5> <%= link_to 'Edit', edit_truck_path(t) %> </h5> </td>
        <td> <h5> <%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %> </h5> </td>
        <td> <h5> <%= link_to 'Show driver', t.driver %> </h5> </td>

      </tr>

    <% end %>
  </tbody>
</table>

<%= link_to 'New Truck', new_truck_path %>
